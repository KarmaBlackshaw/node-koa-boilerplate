// controllers
const {{ camelCase name }}Controller = require('@resources/{{ kebabCase name }}/controller')

module.exports = ({ router }) => router
  .prefix('/{{ pluralKebabCase name }}')

  .post(
    '/',
    {{ camelCase name }}Controller.store
  )

  .post(
    '/list',
    {{ camelCase name }}Controller.list
  )

  .post(
    '/find',
    {{ camelCase name }}Controller.find
  )

  .patch(
    '/',
    {{ camelCase name }}Controller.patch
  )

  .delete(
    '/',
    {{ camelCase name }}Controller.delete
  )
