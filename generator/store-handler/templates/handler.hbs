module.exports = router
  .prefix('/{{ kebabCase name }}')

// .use(authentication())

  .get('/', async ctx => {
    try {
      const query = ctx.request.query
      const params = {
        filterBy: query.filter_by,
        q: query.q,
        page: query.page,
        rows: query.rows,
        sortBy: query.sort_by,
        sort: query.sort,
        dateBy: query.date_by,
        dateFrom: query.date_from,
        dateTo: query.date_to,
        status: query.status
      }

      // /**
      //  * Change necessarily and remove this comment
      //  */
      // ctx.throw(404)

      /**
       * Change necessarily and remove this comment
       */
      const list = await {{ properCase name }}.list({ ...params })
      const count = await {{ properCase name }}.list({ ...params, isCount: true })

      ctx.body = { count: _get(count, 'total', 0), list }
    } catch (error) {
      console.log(error)
      ctx.throw(error)
    }
  })

  .post('/', async ctx => {
    /**
     * Change necessarily and remove this comment
     */
    const schema = Joi.object({
      start_date: Joi.date()
        .optional(),
      end_date: Joi.date()
        .optional(),
      profit: Joi.number()
        .required()
    })

    try {
      const request = await schema.validateAsync(ctx.request.body)

      /**
       * Change necessarily and remove this comment
       */
      ctx.throw(404)

      /**
       * Change necessarily and remove this comment
       */
      ctx.body = await {{ properCase name }}.store({
        start_date: request.start_date,
        end_date: request.end_date,
        profit: request.profit
      })
    } catch (error) {
      console.log(error)
      ctx.throw(error)
    }
  })

  .patch('/', async ctx => {
    /**
     * Change necessarily and remove this comment
     */
    const schema = Joi.object({
      id: Joi.number()
        .required()
    })

    try {
      const data = await schema.validateAsync(ctx.request.body)

      /**
       * Change necessarily and remove this comment
       */
      ctx.throw(404)

      /**
       * Change necessarily and remove this comment
       */
      ctx.body = await {{ properCase name }}.modify(data.id, {})
    } catch (error) {
      console.log(error)
      ctx.throw(error)
    }
  })

  .delete('/', async ctx => {
    const schema = Joi.object({
      id: Joi.number()
        .required()
    })

    try {
      const data = await schema.validateAsync(ctx.request.body)

      /**
       * Change necessarily and remove this comment
       */
      ctx.throw(404)

      /**
       * Change necessarily and remove this comment
       */
      await {{ properCase name }}.modify(data.id, {
