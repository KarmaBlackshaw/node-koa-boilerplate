{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "paths": {
      "@root/*": ["./src/*"],
      "@utilities/*": ["./src/utilities/*"],
      "@config/*": ["./src/config/*"],
      "@bootstrap/*": ["./src/bootstrap/*"],
      "@listeners/*": ["./src/listeners/*"],
      "@jobs/*": ["./src/jobs/*"],
      "@services/*": ["./src/services/*"],
      "@store/*": ["./src/store/*"],
      "@middleware/*": ["src/middleware/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@constants/*": ["./src/constants/*"],
      "@modules/*": ["./src/modules/*"]
    }
  },
  "exclude": ["node_modules"]
}
